<!DOCTYPE html>
<html>
  <%- include('components/Head') -%>
  <body>
    <%- include('components/Header') -%>
   
      <div class="container" style="margin-top: 90px;">
       <div class="row d-flex justify-content-center">
        <h1>Chat</h1>
        
       </div>
       <div class="row d-flex justify-content-center">
       
       
        
       </div>
        <div class="w-50justify-content-center">
          <form id="form_update_delete" action="/contatos/<%= data.id %>?_method=put" method="POST">
            <div class="form-group">
              <label >Email</label>
              <input type="email" 
              class="form-control" 
              name="email" 
              id="email" 
              value="<%= data.email %>"
              
              >
            </div>
            <div class="form-group">
              <label >Nome</label>
              <input 
                type="text" 
                class="form-control" 
                name="nome" 
                id="email"
                value="<%= data.nome %>"
              >
            </div>
  
            <button class="btn btn-primary">Atualizar</button>
           
              <button type="submit" id="delete" class="btn btn-danger">Remover</button>
           

          </form>
        </div>
      </div>

      <script>
        const deleteBtId = document.getElementById('delete');
        const form = document.getElementById('form_update_delete');

        deleteBtId.addEventListener('click',event =>{

          const confirRemover = confirm('Deseja excluir?');
            if(confirRemover){
              form.setAttribute('action','/contatos/<%= data.id %>?_method=delete');

            }
            
            return;
          

        })

      </script>


      <%- include('components/rodape') -%>
  </body>
</html>
